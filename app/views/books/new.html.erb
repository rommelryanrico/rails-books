
<div class="container">
  <div class="title-box">
    <h1>Add Book Review</h1>
  </div>
  <form class="form" action="<%= books_path %>" method="POST" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
    <label>Title</label>
    <input type="text" name="title" class="texter" />

    <label>Author</label>
    <input type="text" name="author" class="texter" />

    <label>Publisher</label>
    <input type="text" name="publisher" class="texter" />
    
    <label>Genre</label>
    <input type="text" name="genre" class="texter" />

    <label>Description</label>
    <input type="textarea" name="description" class="description" />

  
    <input type="submit" value="Create" class="create"/>
  </form>
  <%= link_to "<< Back", :back %>
</div>
